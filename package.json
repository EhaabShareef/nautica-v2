{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "style:fix": "prettier --write \"resources/**/*.{js,ts,jsx,tsx,css,scss,html,blade.php,md}\" && stylelint \"resources/css/**/*.css\" --fix",
        "style:check": "prettier --check \"resources/**/*.{js,ts,jsx,tsx,css,scss,html,blade.php,md}\" && stylelint \"resources/css/**/*.css\" && if rg 'style=' -l resources/views; then echo 'Inline styles found'; exit 1; fi"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.12",
        "vite": "^7.0.4",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "stylelint": "^16.6.1",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-config-tailwindcss": "^0.0.7"
    },
    "dependencies": {
        "alpinejs": "^3.14.9",
        "heroicons": "^2.2.0"
    }
}
